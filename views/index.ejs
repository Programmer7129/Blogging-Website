<div class="author">
    <h1 class="author_heading">Hi, I am Vedant</h1>
    <p class="author_body">Student at University of California Davis</p>

</div>

<img src="/img/author-image.jpeg" alt="image of author" class="author-image" width="528" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    <ul class="article-ul">

    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li> 
    <% }) %>
    </ul>


    <% if (nextPage != null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>